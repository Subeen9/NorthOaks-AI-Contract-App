@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthProvider
@inject IJSRuntime JS

<div class="page">

    <main>
        <AuthorizeView>
            <Authorized>
     
        <header class="border-bottom bg-white px-4 py-3">
            <div class="d-flex align-items-center justify-content-between">

                <!-- Logo and BrandName-->
                <div class="d-flex align-items-center">
                    <div class="bg-primary d-flex align-items-center justify-content-center rounded me-2"
                         style="width:32px; height:32px;">
                        <i class="bi bi-file-earmark-text text-white"></i>
                    </div>
                    <span class="fw-semibold fs-5">ContractHub</span>
                </div>

                
                <div class="d-flex align-items-center gap-3">

                    <!-- Search Bar -->
                    <div class="position-relative">
                        <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                        <input type="text" class="form-control ps-5" placeholder="Search contracts..." style="width: 300px;" />
                    </div>

                    <!-- View Mode Toggling -->
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-secondary active">
                            <i class="bi bi-grid"></i>
                        </button>
                        <button type="button" class="btn btn-outline-secondary">
                            <i class="bi bi-list"></i>
                        </button>
                    </div>

                    <!-- Upload Button -->
                    <button class="btn text-white"
                            style="background: linear-gradient(to right, #2563eb, #7c3aed);">
                        <i class="bi bi-upload me-2"></i> Upload Contract
                    </button>

                    <!-- Notifications -->
                    <button class="btn btn-link position-relative">
                        <i class="bi bi-bell fs-5"></i>
                        <span class="position-absolute top-0 start-100 translate-middle p-1 "></span>
                    </button>

                    <!-- User Profile Dropdown -->
                    <div class="dropdown">
                        <button class="btn btn-light rounded-circle dropdown-toggle"
                                type="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false"
                                style="width: 40px; height: 40px;">
                            SB
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                            <li>
                                <a class="dropdown-item" href="#">
                                    <i class="bi bi-gear me-2"></i> Settings
                                </a>
                            </li>
                            <li>
                                <button class="dropdown-item" @onclick="Logout">
                                    <i class="bi bi-box-arrow-right me-2"></i> Logout
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
            </Authorized>
            <!--Not showing Navbar if user is not signed in-->
            <NotAuthorized>
              
            </NotAuthorized>

        </AuthorizeView>


        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
@code {
    [Inject] private HttpClient Http { get; set; }
    [Inject] private NavigationManager Navigation { get; set; }

    private async Task Logout()
    {
        // Call server logout
        await Http.PostAsync("/api/Auth/logout", null);

        // Remove JWT
        await JS.InvokeVoidAsync("localStorage.removeItem", "authToken");

        // Notify provider
        ((CustomAuthStateProvider)AuthProvider).NotifyUserLogout();

        // Redirect
        Navigation.NavigateTo("/", true);
    }
}
