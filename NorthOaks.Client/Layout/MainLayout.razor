@using Microsoft.AspNetCore.Components.Authorization
@using NorthOaks.Client.Providers
@using BlazorBootstrap
@using System.Security.Claims

@inherits LayoutComponentBase
@implements IDisposable

@inject AuthenticationStateProvider AuthProvider
@inject NotificationProvider Notifications
@inject IJSRuntime JS

<Toasts class="p-3" AutoHide="true" Delay="3000" Placement="ToastsPlacement.TopRight" />

<div class="page">
    <main>
        <AuthorizeView>
            <Authorized>
                <header class="border-bottom bg-white px-4 py-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center contracthub-button" @onclick="NavigateToHome">
                            <span class="fw-semibold fs-3 logo-text" style="color:#003768;">
                                <img src="images/northoaks leaf.png" alt="ContractHub Logo"
                                     style="width:32px; height:32px; vertical-align:middle; margin-right:4px;" />
                                NorthOaks Contract AI
                            </span>
                        </div>

                        <div class="d-flex align-items-center gap-3">
                            <button class="btn text-white" style="background: #003768" @onclick="NavigateToUpload">
                                <i class="bi bi-upload me-2"></i> Upload Contract
                            </button>

                            <div class="dropdown">
                                <button class="btn btn-link position-relative" title="Notifications"
                                        id="notificationMenu" data-bs-toggle="dropdown" aria-expanded="false"
                                        @onclick="ClearNotifications">
                                    <i class="bi bi-bell fs-5"></i>
                                    @if (unreadCount > 0)
                                    {
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                            @unreadCount
                                        </span>
                                    }
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationMenu">
                                    @if (Notifications.Messages.Count == 0)
                                    {
                                        <li><span class="dropdown-item-text">No new notifications</span></li>
                                    }
                                    else
                                    {
                                        @foreach (var msg in Notifications.Messages)
                                        {
                                            <li><span class="dropdown-item-text">@msg</span></li>
                                        }
                                    }
                                </ul>
                            </div>

                            <div class="dropdown">
                                <button class="btn rounded-circle text-white"
                                        type="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false"
                                        style="width: 40px; height: 40px; background: #003768">
                                    @initials
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                    <li>
                                        <button class="dropdown-item" @onclick="Logout">
                                            <i class="bi bi-box-arrow-right me-2"></i> Logout
                                        </button>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </header>
            </Authorized>
            <NotAuthorized>
            </NotAuthorized>
        </AuthorizeView>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    [Inject] private HttpClient Http { get; set; }
    [Inject] private NavigationManager Navigation { get; set; }
    [Inject] protected ToastService ToastService { get; set; } = default!;

    private string initials = "";
    private int unreadCount = 0;

    private void NavigateToUpload() => Navigation.NavigateTo("/upload");
    private void NavigateToHome() => Navigation.NavigateTo("/home");

    protected override async Task OnInitializedAsync()
    {
        // --- 1. GET USER ID FROM AUTH TOKEN ---
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        string currentUserIdFromClaims = null;

        if (user?.Identity?.IsAuthenticated == true)
        {
            currentUserIdFromClaims = user.Claims.FirstOrDefault(c => c.Type == ClaimTypes.NameIdentifier)?.Value
                                   ?? user.Claims.FirstOrDefault(c => c.Type == "sub")?.Value;

            var firstName = user.Claims.FirstOrDefault(c => c.Type == "name")?.Value ?? "";
            var lastName = user.Claims.FirstOrDefault(c => c.Type == "family_name")?.Value ?? "";
            initials = GetInitials(firstName, lastName);
        }
        else
        {
            initials = "NA";
        }

        // --- 2. INITIALIZE NOTIFICATION PROVIDER ---
        try
        {
            await Notifications.InitializeAsync(currentUserIdFromClaims);
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"SignalR Connection Failed: {ex.Message}");
            ToastService.Notify(new(ToastType.Danger, "Notification service failed to connect. Check console."));
        }

        // --- 3. SUBSCRIBE TO COUNT CHANGES (REMOVED TOAST SUBSCRIPTION) ---
        Notifications.OnCountChanged += UpdateUnreadCount;
        unreadCount = Notifications.UnreadCount;
    }

    // This method updates the bell icon
    private void UpdateUnreadCount()
    {
        unreadCount = Notifications.UnreadCount;
        InvokeAsync(StateHasChanged);
    }

    // This method clears the badge
    private void ClearNotifications()
    {
        Notifications.ClearUnread();
    }

    private string GetInitials(string firstName, string lastName)
    {
        string f = !string.IsNullOrEmpty(firstName) ? firstName[0].ToString().ToUpper() : "";
        string l = !string.IsNullOrEmpty(lastName) ? lastName[0].ToString().ToUpper() : "";
        return f + l;
    }

    private async Task Logout()
    {
        await Http.PostAsync("/api/Auth/logout", null);
        await JS.InvokeVoidAsync("localStorage.removeItem", "authToken");
        ((CustomAuthStateProvider)AuthProvider).NotifyUserLogout();
        ToastService.Notify(new(ToastType.Success, "Logout Successful"));
        Navigation.NavigateTo("/");
    }

    // Unsubscribe from events to prevent memory leaks
    public void Dispose()
    {
        Notifications.OnCountChanged -= UpdateUnreadCount;
    }
}
