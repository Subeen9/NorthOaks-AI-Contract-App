@page "/home";

@using NorthOaks.Client.Shared

<div class="container mt-4">
    <h3 class="mb-4">Contract Library</h3>
    <p>@contractList.Count contracts found</p>

    <div class="row g-4">
        @foreach (var contract in contractList)
        {
            <div class="col-md-4">
                <ContractCard Title="@contract.Title"
                              UploadedBy="@contract.UploadedBy"
                              Description="@contract.Description"
                              Status="@contract.Status"
                              ExpiryDate="@contract.ExpiryDate" />
            </div>
        }
    </div>
</div>

