@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@using NorthOaks.Shared.Model.Users
@inject HttpClient Http
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthProvider
@inject IJSRuntime JS
@inject ToastService ToastService

<div class="auth-page">
    <div class="auth-card">
        <div class="text-center mb-3">
            <img src="images/NorthOaks.jpg" alt="North Oaks Logo" width="72" height="72" class="mb-2 auth-logo" />
            <h2 class="auth-title">Contract Management</h2>
            <p class="auth-sub">Sign in to access your contract library</p>
        </div>

        <EditForm Model="@loginModel" OnValidSubmit="HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label for="username" class="form-label auth-label">Email or Username</label>
                <InputText id="username" class="form-control auth-input" @bind-Value="loginModel.UserName" />
                <ValidationMessage For="@(() => loginModel.UserName)" />
            </div>

            <div class="mb-3">
                <div class="d-flex justify-content-between align-items-center">
                    <label for="password" class="form-label auth-label mb-0">Password</label>
                    <a class="auth-link" href="/forgot-password">Forgot password?</a>
                </div>

                <!-- Password field with perfectly-centered eye toggle -->
                <div class="auth-field">
                    <InputText id="password"
                               class="form-control auth-input pe-5"
                               @bind-Value="loginModel.Password"
                               Type="@(showPassword ? "text" : "password")" />
                    <button type="button"
                            class="btn btn-sm auth-eye"
                            @onclick="ToggleShowPassword"
                            aria-label="Toggle password visibility">
                        <i class="bi @(showPassword ? "bi-eye-slash" : "bi-eye")"></i>
                    </button>
                </div>

                <ValidationMessage For="@(() => loginModel.Password)" />
            </div>

            <button type="submit" class="btn auth-cta w-100" disabled="@isLoading" aria-busy="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                    <span>Signing in...</span>
                }
                else
                {
                    <span>Sign In</span>
                }
            </button>
        </EditForm>

        <p class="auth-foot text-center mt-3">
            Don't have an account?
            <a class="auth-link" href="/register">Sign Up</a>
        </p>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger mt-3 mb-0">@errorMessage</div>
        }
    </div>
</div>

@code {
    // Initialize to avoid nullability complaints and mixed content errors
    private LoginDto loginModel = new() { UserName = "", Password = "" };
    private string? errorMessage;
    private bool isLoading = false;
    private bool showPassword = false;

    private void ToggleShowPassword() => showPassword = !showPassword;

    private async Task HandleValidSubmit()
    {
        errorMessage = string.Empty;
        isLoading = true;

        try
        {
            var response = await Http.PostAsJsonAsync("api/Auth/login", loginModel);

            if (response.IsSuccessStatusCode)
            {
                var token = await response.Content.ReadAsStringAsync();

                await JS.InvokeVoidAsync("localStorage.setItem", "authToken", token);
                (AuthProvider as CustomAuthStateProvider)?.NotifyUserAuthentication(token);

                // Go to home page
                Navigation.NavigateTo("/home", forceLoad: true);
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                errorMessage = "Invalid username or password.";
                ToastService.Notify(new(ToastType.Danger, "Login Failed. Invalid Credentials"));
            }
            else
            {
                errorMessage = "Login failed. Please try again.";
                ToastService.Notify(new(ToastType.Danger, "An unexpected error occurred"));
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error during login: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}
