<div class="card shadow-sm mb-3 h-100" style="border-radius:10px;">
    <div class="card-body d-flex flex-column">
        <h5 class="card-title fw-bold">@Title</h5>
        <p class="text-muted mb-1">Uploaded by @UploadedBy</p>
        <p class="card-text text-truncate flex-grow-1">@Description</p>

        <div class="d-flex justify-content-between align-items-center mt-3">
            <span class="badge @GetStatusClass(Status)">@Status</span>
            <small class="text-muted">@ExpiryDate.ToShortDateString()</small>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string UploadedBy { get; set; }
    [Parameter] public string Description { get; set; }
    [Parameter] public string Status { get; set; }   // "active", "pending", "expired"
    [Parameter] public DateTime ExpiryDate { get; set; }

    private string GetStatusClass(string status)
    {
        return status?.ToLower() switch
        {
            "active" => "bg-success text-white",
            "pending" => "bg-warning text-dark",
            "expired" => "bg-danger text-white",
            _ => "bg-secondary text-white"
        };
    }
}